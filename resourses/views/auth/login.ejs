<section class="login flex justify-center">
        <div class="container py-5 h-100">
          <div class="row d-flex justify-content-center justtify-items-left h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
              <div class="card shadow-2-strong" style="border-radius: 1rem;">
                <div class="card-body p-5">
                  
                  <form action="/login" method="post">
                    <% if(messages.error) { %> 
                      <span class="text-red-500 text-m"><%= messages.error; %></span>
                    <% }  %> 
      
                  <div class="form-outline mb-4">
                    <label class="form-label font-bold" for="username">Email</label>
                    <input name="email" type="email" id="username" class="form-control form-control-lg" placeholder="Enter Your Email" />
                  </div>
      
                  <div class="form-outline mb-4">
                    <label class="form-label font-bold" for="password">Password</label>
                    <input name="password" type="password" id="password" class="form-control form-control-lg" />
                  </div>

                  <div class="flex items-center justify-between">
                    <button class="btn-prim rounded-full text-white font-bold py-2 px-4" type="submit">Login</button>
                    <a href="/register">Don't have account?</a> 
                  </div>
                </form>

                </div>
              </div>
            </div>
          </div>
        </div>
</section>