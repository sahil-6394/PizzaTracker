<section class="cart py-16">

    <% if(session.cart) { %> 
    <div class="order container mx-auto w-1/2">
        <div class="flex items-center border-b border-gray-300 pb-4">
            <img src="/img/cart-black.png" alt="">
            <h1 class="font-bold ml-4 text-2xl">Order Summary</h1>
        </div>
        <div class="pizaa-list ">
            <% for(let pizza of Object.values(session.cart.items))  { %> 
            <div class="flex items-center my-8">
                <img class="w-24" src="/img/<%= pizza.item.image %> " alt="">
                <div class="flex-1 ml-4">
                    <h1><%= pizza.item.name %> </h1>
                    <span><%= pizza.item.name %> </span>
                </div>
                <span class="flex-1"><%= pizza.qty %>  Pcs</span>
                <span class="font-bold text-xl"><%= pizza.qty * pizza.item.price %> </span>
            </div>
            <% } %>
        </div>
        <hr>

        <div class="text-right py-4">
            <div>
                <span class="text-lg font-bold">Total Ammount</span>
                <span class="ammount text-2xl font-bold ml-2 py-4"><%= session.cart.totalPrice %> </span>
            </div>
            <% if(user) { %> 
            <div>
                <form action="/orders" method="post" class="mt-12">
                    <input name="phone" class="border border-gray-400 p-2 w-1/2 mb-2" type="text" placeholder="Phone Number">
                    <input name="address" class="border border-gray-400 p-2 w-1/2 mt-2 mb-2" type="text" placeholder="Address">
                    <div>
                        <button class="btn-prim  px-6 py-2 rounded-full  text-white font-bold mt-6">Order Now</button>
                    </div>
                </form>
            </div>
            <% } else { %> 
            <a href="/login" class="inline-block cursor-pointer 
                btn-prim rounded-full px-6 py-2 text-white font-bold">Log in to Continue</a>
            <% } %> 
        </div>
    </div>
    <% } else { %> 
    <div class="empty-cart py-10">
    <div class="container mx-auto text-center">
        <h1 class="text-3xl font-bold mb-2">Cart Empty</h1>
        <p class="text-gray-500 text-lg mb-12">You Probably haven't odred a pizza a yet.,<br>
        To Order a pizza, go to the main menue</p>
        <img src="/img/empty-cart.png" class="w-2/5 mx-auto" alt="empty cart image">
        <a href="/" class="inline-block px-6 py-2 rounded-full btn-primary text-white font-bold mt-12">Go back</a>
    </div>
    <% } %> 
    </section>
